<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_player_vs_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player x player"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_player_vs_robot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player X Robot"
        app:layout_constraintEnd_toEndOf="@id/btn_player_vs_player"
        app:layout_constraintStart_toStartOf="@id/btn_player_vs_player"
        app:layout_constraintTop_toBottomOf="@id/btn_player_vs_player" />

</androidx.constraintlayout.widget.ConstraintLayout>